@page
@model Senparc.Areas.Admin.Pages.IndexModel
@{
    ViewData["Title"] = "管理员后台首页";
}
@section scripts {
    <script src="~/node_modules/echarts/dist/echarts.js"></script>
    <script src="~/js/Admin/Pages/Index/Index.js"></script>
    <script src="~/js/Admin/Pages/Test/Vue.js"></script>
}

<div class="row" id="app">
    <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="tile-stats">
            <div class="icon">
                <i class="fa fa-caret-square-o-right"></i>
            </div>
            <div class="count">179</div>
            <h3>今日新订单数量</h3>
            <p></p>
        </div>
    </div>
    <el-table :data="tableData"
              style="width: 100%">
        <el-table-column prop="date"
                         label="日期"
                         width="180">
        </el-table-column>
        <el-table-column prop="name"
                         label="姓名"
                         width="180">
        </el-table-column>
        <el-table-column prop="address"
                         label="地址">
        </el-table-column>
    </el-table>
    <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="tile-stats">
            <div class="icon">
                <i class="fa fa-comments-o"></i>
            </div>
            <div class="count">179</div>
            <h3>售后订单数量</h3>
            <p></p>
        </div>
    </div>
    <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="tile-stats">
            <div class="icon">
                <i class="fa fa-sort-amount-desc"></i>
            </div>
            <div class="count">179</div>
            <h3>新发表文章数</h3>
            <p></p>
        </div>
    </div>
    <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="tile-stats">
            <div class="icon">
                <i class="fa fa-check-square-o"></i>
            </div>
            <div class="count">￥91975</div>
            <h3>账户余额</h3>
            <p></p>
        </div>
    </div>

    <div class="col-xs-12 col-md-6 col-lg-6">
        <div id="firstChart" style="height:350px;width: 100%">

        </div>
    </div>

    <div class="col-xs-12 col-md-6 col-lg-6">
        <div id="secondChart" style="height:350px;width: 100%">

        </div>
    </div>
</div>