@page
@model Senparc.ExtensionAreaTemplate.Areas.MyApp.Pages.MyHomePage
@{
    ViewData["Title"] = "首页";
}

<p>@Model.XscfModuleDto.MenuName - @SystemTime.Now</p>
<p>@Model.XscfModuleDto.Description</p>



<div style="margin:30px auto; width:80%; text-align:center; padding:80px; background-color:rgba(@Model.ColorDto.Red,@Model.ColorDto.Green,@Model.ColorDto.Blue,1)">
    <a href="@Url.PageLink(null,"Brighten",new { uid = Model.XscfModuleDto.Uid })" title="变亮" class="btn-lg btn btn-success" style="background-color:rgba(@(255-Model.ColorDto.Red),@(255-Model.ColorDto.Green),@(255-Model.ColorDto.Blue),0.8)">变亮</a>
    <a href="@Url.PageLink(null,"Darken",new { uid = Model.XscfModuleDto.Uid })" title="变暗" class="btn-lg btn btn-success" style="background-color:rgba(@(255-Model.ColorDto.Red),@(255-Model.ColorDto.Green),@(255-Model.ColorDto.Blue),0.8)">变暗</a>
    <a href="@Url.PageLink(null,"Random",new { uid = Model.XscfModuleDto.Uid })" title="随机" class="btn-lg btn btn-success" style="background-color:rgba(@(255-Model.ColorDto.Red),@(255-Model.ColorDto.Green),@(255-Model.ColorDto.Blue),1)">随机</a>
</div>
